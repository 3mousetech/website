---
layout: default
---

<% if @document.photo: %>
	<div style="float: left; padding: 1em;"><img src="<%= @document.photo %>" alt="" /></div>
<% end %>

<ul>
	<% if @document.twitter: %>
		<li>
			Twitter: 
			<a href="https://twitter.com/<%= @document.twitter %>">@<%= @document.twitter %></a>
		</li>
	<% end %>
</ul>

<%- @content %>
