-var meta = getBlock("meta")
-var scripts = getBlock("scripts")
-var styles = getBlock("styles")

doctype
html(lang = "en", ng-app = "app")
  head
    title= getPreparedTitle()
    link(href = "//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css", rel = "stylesheet")
    link(href = "/stylesheet.css", rel = "stylesheet")
    !=styles.toHTML()
    link(rel="alternate", type="application/atom+xml", title=site.title, href="/feed.xml")
    meta(name = "viewport", content = "width=device-width, initial-scale=1.0")
    meta(name = "google-site-verification", content = "FIXME")
    !=meta.toHTML()
  body
    #wrap
      .container
        a.sr-only(href = "#content") Skip to main content
        header
          h1: a(href = "/")=site.title
        nav
          ul.nav.nav-tabs
            each doc in getCollection('pages').toJSON()
              - clazz = (document.url === doc.url) ? "active" : null
              li(class = clazz)
                a(href=doc.url)= doc.title
        #content
          if document.type == "page" && !document.isPaged
            header
              h1=document.title
          !=content
    #footer
      .container
        footer Copyright &copy; 2014 3 Mouse Technology.
    script(src = "//code.jquery.com/jquery-2.0.3.min.js")
    script(src = "//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.10/angular.min.js")
    script(src = "//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js")
    script(src = "/scripts/vendor/angular-moment/angular-moment.min.js")
    script(src = "//cdnjs.cloudflare.com/ajax/libs/moment.js/2.4.0/moment.min.js")
    script(src = "//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js")
    script(src = "//netdna.bootstrapcdn.com/bootstrap/3.1.0js/bootstrap.min.js")
    script(src = "/scripts/index.js")
    script.
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'thewordnerd'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
      }());
    script.
      var _paq = _paq || [];
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);

      (function() {
        var u=(("https:" == document.location.protocol) ? "https" : "http") + "://thewordnerd.info/analytics/";
        _paq.push(["setTrackerUrl", u+"piwik.php"]);
        _paq.push(["setSiteId", "1"]);
        var d=document, g=d.createElement("script"), s=d.getElementsByTagName("script")[0]; g.type="text/javascript";
        g.defer=true; g.async=true; g.src=u+"piwik.js"; s.parentNode.insertBefore(g,s);
      })();
    !=scripts.toHTML()
